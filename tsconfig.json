{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "pretty": true,
    "outDir": "dist",
    "lib": ["es2017"]
  },
  "include": [
    "src",
    "src/sequelize/sequelize/sequelize.d.ts",
    "src/sequelize/sequelize/sequelize.js",
    "src/model/model/model.d.ts",
    "src/model/model/model.js"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
