{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "pretty": true,
    "lib": ["es2017"],
    "types": ["node", "reflect-metadata"]
  },
  "include": [
    "lib/**/*"
  ],
  "files": [
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
